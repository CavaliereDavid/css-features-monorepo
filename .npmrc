# Enable auto-installing peer dependencies
auto-install-peers=true

# Use a shared lockfile for the entire workspace
shared-workspace-lockfile=true

# Prefer workspace packages over registry packages
prefer-workspace-packages=true

# Enable linking of workspace packages
link-workspace-packages=true

# Set the directory for the virtual store
virtual-store-dir=.pnpm

# Enable side effects cache to speed up installations
side-effects-cache=true

# Set the maximum number of child processes to allocate simultaneously to build node_modules
child-concurrency=5

# Set the maximum number of HTTP(S) requests to process simultaneously
network-concurrency=16

# Enable strict peer dependencies
strict-peer-dependencies=false

# Set the default registry
registry=https://registry.npmjs.org/